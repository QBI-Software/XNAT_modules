<!DOCTYPE html>
	$page.setTitle("IRC5 QBI Saliva Sample")
	$page.setLinkColor($ui.alink)
	$page.setVlinkColor($ui.vlink)
	#if ($turbineUtils.GetPassedParameter("popup", $data))
		#set ($popup = $turbineUtils.GetPassedParameter("popup", $data) )
		#set ($popup = "false")
	#end

<div class="container">
    <div class="row">
        <h3>IRC5 QBI Saliva Sample</h3>
		#parse($turbineUtils.getTemplateName("_report",$om.getXSIType(),$project))

        <div class="col-sm-4" align="right">
			#parse($turbineUtils.getTemplateName("actions",$om.getXSIType(),$project))
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-sm-8">
            <table class="table resultstable">
                <thead>
                <tr class="resultsheader">
                    <th>Description</th>
                    <th>Value</th>
                </tr>

                </thead>
                <tbody>
                <tr>
                    <th>Date Collected</th>
                    <td>$!item.getDateProperty("irc5:salivaData/date")</td>
                </tr>
                <tr>
                    <th>Comments</th>
                    <td>$!item.getStringProperty("irc5:salivaData/comments")</td>
                </tr>
                <tr>
                    <th>Number tubes remaining</th>
                    <td>$!item.getIntegerProperty("irc5:salivaData/remaining")</td>
                </tr>
                <tr>
                    <th>Total tubes analysed</th>
                    <td>$!item.getIntegerProperty("irc5:salivaData/total")</td>
                </tr>
                <tr>

                    #set($numTubes = $!item.getTubes_tube().size())
                    <span>numTubes = $!numTubes</span><br/>
                    <span>Item.tube= $!item.getTubes_tube()</span>
                    #foreach ($scan in $item.Scans_scan)
                        $scan.Id   $!scan.Type   $!scan.Quality
                    #end
                    #foreach($tube in $item.Tubes_tube)
                    <tr>
                        <td>$tube.getProperty("irc5:salivaData/tubes/tube/tube_number")</td>
                        <td>$tube.getDateAnalysed()</td>
                        <td>$tube.getRatio()</td>
                        <td>$tube.getConcentration()</td>
                        <td>$tube.getRecheck()</td>

                    </tr>

                    #end
                    #if ($numTubes > 0)
                        <th>Tubes Analysed</th>
                        #set ($TOTAL_TUBES = $numTubes - 1)
                        <td>
                        <table class="table table-striped">
                            <thead>
                            <th>Tube number</th>
                            <th>Date analysed</th>
                            <th>Ratio</th>
                            <th>Concentration</th>
                            <th>Recheck</th>

                            </thead>
                            <tbody id="tubes">
                                #foreach($tube in [0..$TOTAL_TUBES])
                                <tr>
                                    <td>$!item.getProperty("irc5:salivaData/tubes/tube[$tube]/tube_number")</td>
                                    <td>$!item.getProperty("irc5:salivaData/tubes/tube[$tube]/date_analysed")</td>
                                    <td>$!item.getProperty("irc5:salivaData/tubes/tube[$tube]/ratio")</td>
                                    <td>$!item.getProperty("irc5:salivaData/tubes/tube[$tube]/concentration")</td>
                                    <td>$!item.getProperty("irc5:salivaData/tubes/tube[$tube]/recheck")</td>

                                </tr>

                                #end
                            <input type="hidden" name="TUBE_COUNTER" id="TUBE_COUNTER" value="5"/>
                            </tbody>

                        </table>

                        </td>
                        #end
                </tr>
                </tbody>
            </table>
        </div>
        <div class="col-sm-4">&nbsp;</div>
    </div>
</div>