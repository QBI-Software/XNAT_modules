<!DOCTYPE html>
$page.setTitle("QBI Blood Sample")
$page.setLinkColor($ui.alink)
$page.setVlinkColor($ui.vlink)
#if ($turbineUtils.GetPassedParameter("popup", $data))
	#set ($popup = $turbineUtils.GetPassedParameter("popup", $data) )
	#set ($popup = "false")
#end

<div class="container">
    <div>
        <h3>QBI Blood Sample</h3>
			#parse($turbineUtils.getTemplateName("_report",$om.getXSIType(),$project))

        <div align="right">
			#parse($turbineUtils.getTemplateName("actions",$om.getXSIType(),$project))
        </div>
	</div>
	<br/>
    <div class="row">
		<div class="col-sm-8 table-responsive">
            <table class="table table-striped resultstable">
                <thead>
							<tr class="resultsheader">
            					<th>Description</th>
            					<th>Value</th>				
            				</tr>

				</thead>
				<tbody>
                            <tr>
            					<th>Date Collected</th>
            					<td>$!item.getDateProperty("irc5:bloodData/date")</td>
            				</tr>
                            <tr>
            					<th>Date Analysed</th>
            					<td>$!item.getDateProperty("irc5:bloodData/date_analysed")</td>
            				</tr>
            				<tr>
            					<th>Summary</th>
            					<td>$!item.getStringProperty("irc5:bloodData/summary")</td>
            				</tr>
            				<tr>
            					<th>Comments</th>
            					<td>$!item.getStringProperty("irc5:bloodData/comments")</td>
            				</tr>

                </tbody>
			</table>
        </div>
        <div class="col-sm-4">&nbsp;</div>
    </div>
</div>