#* @vtlvariable name="siteConfig" type="org.nrg.xdat.preferences.SiteConfigPreferences" *#
#* @vtlvariable name="tube" type="org.nrg.xdat.om.Irc5Salivatubedata" *#
#* @vtlvariable name="user" type="org.nrg.xdat.security.XDATUser" *#
<script type="text/javascript">
    window.currentID = "$!om.getId()";
		#if($om.getProject())
			#if($om.getProject().equals(""))
            window.currentProject = "$!project";
			#else
            window.currentProject = "$!om.getProject()";
			#end
		#else
        window.currentProject = "$!project";
		#end

    window.currentSubject = "$!om.getSubjectId()";
    window.currentLabel = "$!om.getLabel()";
</script>
#if ($data.message)
<div class="alert alert-danger error"><span>$data.message</span></div>
#end
<div id="EditForm" class="container">
    <form id="form1" name="form1" method="post" action="$link.setAction("ModifySubjectAssessorData")">
        <input type="hidden" name="project" value="$!{project}">
        <input type="hidden" name="part_id" value="$!{part_id}">
        <input type='hidden' name='$om.getXSIType()/ID' value='$!item.getProperty("ID")'/>
        <input type="hidden" name="$om.getXSIType()/project" value='$!{project}'/>
        <input type='hidden' name='$om.getXSIType()/subject_ID'
               value='$!item.getProperty("$om.getXSIType()/subject_ID")'/>
        <input type="hidden" name="$om.getXSIType().date.month" id="$om.getXSIType().date.month" value=""/>
        <input type="hidden" name="$om.getXSIType().date.date" id="$om.getXSIType().date.date" value=""/>
        <input type="hidden" name="$om.getXSIType().date.year" id="$om.getXSIType().date.year" value=""/>
		#if($vr)
            <div class="alert alert-danger">Invalid parameters:<br/>$vr.toHTML()</div>
		#end
        <h2 class="edit-title">IRC5 QBI Saliva Sample #if($om.getId()) : Edit #else  : Create #end</h2>
        <div class="row">
			#parse("/screens/xnat_edit_subjectAssessorData.vm")
        </div>
        <div class="row">
			#parse("/screens/EditProjectSpecificFields.vm")
        </div>
        <div class="form-inline">
            <label for="irc5:salivaData/date">Date Collected</label>
			#xdatDateBox("irc5:salivaData/date" $item  $vr $years)
        </div>

        <div class="form-inline">
            <label for="irc5:salivaData/remaining">Number tubes remaining</label>
            #xdatNumberBoxParams("irc5:salivaData/remaining" $item "" $vr "form-control" "" "10")
        </div>
        <div class="form-inline">
            <label for="irc5:salivaData/total">Total tubes analysed</label>
            #xdatNumberBoxParams("irc5:salivaData/total" $item "" $vr "form-control" "" "10")
        </div>
        <div class="form-group">
            <label for="irc5:salivaData/comments">Comments</label>
            #xdatTextArea("irc5:salivaData/comments" $item "" $vr "3" "20")
        </div>
        <div class="form-inline">
        <label for="irc5:salivaData/tubes">Tubes analysed</label>
            <table class="table table-striped">
                <thead>
                    <th>Tube number</th>
                    <th>Date analysed</th>
                    <th>Ratio</th>
                    <th>Concentration</th>
                    <th>Recheck</th>
                    <th>Action</th>

                </thead>
                <tbody id="tubes">


                #if($om.getTubes_tube().size() > 0)
                    #set($maxtubes = $om.getTubes_tube().size() )
                #end

                <span>Size = $maxtubes</span>
                    #foreach($tubeid in [0..$maxtubes])
                        #set($tube=$om.getTubes_tube().get($tubeid))
                        <span>tube = $tube</span>
                        <tr>
                            <td>#xdatNumberBoxParams("tube_number" $tube "" $vr "form-control" "" "10")</td>
                            <td>#xdatDateBox("date_analysed" $tube $vr $years)</td>
                            <td>#xdatNumberBoxParams("ratio" $tube "" $vr "form-control" "" "10")</td>
                            <td>#xdatNumberBoxParams("concentration" $tube "" $vr "form-control" "" "10")</td>
                            <td>#xdatBooleanCheckbox("recheck" $tube $vr)</td>
                            <td><button class="remove_row" title="Remove tube"><span class="glyphicon glyphicon-remove"></span></button></td>
                        </tr>
                    #end

                </tbody>

            </table> <input type="hidden" name="TUBE_COUNTER" id="TUBE_COUNTER" value="$maxtubes"/>
            <a href="javascript:void(0)" id="add_tube" class="btn btn-info">Add another tube</a>



    </div>
        <div class="form-group">
			#xdatEditProps($item $edit_screen)

            <input class="btn btn-primary" type="button" onclick="validateForm();" name="eventSubmit_doInsert"
                   value="Submit"/>
            <input class="btn btn-default" type="button" value="Cancel" onclick="goBack();"/>
        </div>
    </form>
    <div id="empty_tube" style="display:none"><table>
    <tr>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/tube_number" $item "" $vr "form-control" "" "10")</td>
        <td>#xdatDateBox("irc5:salivaData/tubes/tube[COUNTER]/date_analysed" $item $vr $years)</td>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/ratio" $item "" $vr "form-control" "" "10")</td>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/concentration" $item "" $vr "form-control" "" "10")</td>
        <td>#xdatBooleanCheckbox("irc5:salivaData/tubes/tube[COUNTER]/recheck" $item $vr)</td>
        <td><button class="remove_row" title="Remove tube"><span class="glyphicon glyphicon-remove"></span></button></td>
    </tr> </table></div>
</div>

<script type="text/javascript">
    function validateForm() {
        document.getElementById("form1").submit();
        return true;
    }

    function goBack() {
        window.history.back();
    }
    $('#add_tube').click(function() {
        var tube_counter = $('#TUBE_COUNTER').val();
        var newrow = $('#empty_tube table tbody').html().replace(/COUNTER/g, tube_counter);
        alert(newrow);
        $('#tubes').append(newrow);
        $('#TUBE_COUNTER').val(parseInt(tube_counter) + 1);
    });

    $('.remove_row').click(function(event) {
        event.preventDefault();
        var tube_counter = $('#TUBE_COUNTER').val();
        $(this).parents("tr").remove();
        $('#TUBE_COUNTER').val(parseInt(tube_counter) - 1);
    });
</script>

