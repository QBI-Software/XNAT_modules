</script>
#if ($data.message)
    <div class="alert alert-danger error"><span>$data.message</span></div>
#end

<div id="EditForm" class="container">
    <form id="form1" name="form1" method="post" action="$link.setAction("ModifySubjectAssessorData")">
        <input type="hidden" name="project" value="$!{project}">
        <input type="hidden" name="part_id" value="$!{part_id}">
        <input type='hidden' name='$om.getXSIType()/ID' value='$!item.getProperty("ID")'/>
        <input type="hidden" name="$om.getXSIType()/project" value='$!{project}'/>
        <input type='hidden' name='$om.getXSIType()/subject_ID' value='$!item.getProperty("$om.getXSIType()/subject_ID")'/>
        <input type="hidden" name="$om.getXSIType().date.month" id="$om.getXSIType().date.month" value=""/>
        <input type="hidden" name="$om.getXSIType().date.date" id="$om.getXSIType().date.date" value=""/>
        <input type="hidden" name="$om.getXSIType().date.year" id="$om.getXSIType().date.year" value=""/>
		#if($vr)
            <div class="alert alert-danger">Invalid parameters:<br/>$vr.toHTML()</div>
		#end
        <h2 class="edit-title">IRC5 Saliva Sample #if($om.getId()) : Edit #else  : Create #end</h2>
        <div class="row">
			#parse("/screens/xnat_edit_subjectAssessorData.vm")
        </div>
        <div class="row">
			#parse("/screens/EditProjectSpecificFields.vm")
        </div>
        <div class="form-inline">
            <label for="irc5:salivaData/date">Date Collected</label>
			#xdatDateBoxParams("irc5:salivaData/date" "" $item  $vr $years  "form-control")
        </div>
        <div class="form-inline" id="totaltd">
            <label for="irc5:salivaData/total">Total tubes collected</label>
            #xdatNumberBoxParams("irc5:salivaData/total" $item "" $vr "form-control" "" "5")
        </div>

        <div class="form-group">
            <label for="irc5:salivaData/comments">Comments</label>
            #xdatTextArea("irc5:salivaData/comments" $item "" $vr "3" "20")
        </div>
        <div class="form-inline">
        <label for="irc5:salivaData/tubes">Tubes analysed</label>
            <table class="table table-striped">
                <thead>
                    <th>Tube number</th>
                    <th>Date analysed</th>
                    <th>260/280</th>
                    <th>260/230</th>
                    <th>Concentration</th>
                    <th>Recheck</th>
                    <th>Action</th>

                </thead>
                <tbody id="tubes">
                <input type="hidden" name="TUBES_COLLECTED" id="TUBES_COLLECTED" value="$om.getTotal()"/>

                #if($om.getTubes_tube().size() > 0)

                    <input type="hidden" name="EDIT" id="EDIT" value="true"/>
                    #set($maxtubes = $om.getTubes_tube().size() - 1 )

                    #foreach($tubeidx in [0..$maxtubes])
                        #set($tube=$om.getTubes_tube().get($tubeidx))
                        #set($tubetype=$!tube.getXSIType())
                        #set($tubeid=$tube.getIrc5SalivatubedataId())
                        #set($exptid=$!item.getProperty("ID"))

                    <tr>#xdatHiddenBoxID("irc5:salivaData/tubes/tube[$tubeidx]/irc5_salivatubedata_id" "irc5_salivatubedata_id" $tube "")
                        <td>#xdatNumberBoxParamsIDRequired("irc5:salivaData/tubes/tube[$tubeidx]/tube_number" "tube_number" $tube "" $vr "form-control" "" "3")</td>
                        <td>#xdatDateBoxParams("irc5:salivaData/tubes/tube[$tubeidx]/date_analysed" "date_analysed" $tube $vr $years "form-control" )</td>
                        <td>#xdatNumberBoxParamsID("irc5:salivaData/tubes/tube[$tubeidx]/ratio230" "ratio230" $tube "" $vr "form-control" "" "3")</td>
                        <td>#xdatNumberBoxParamsID("irc5:salivaData/tubes/tube[$tubeidx]/ratio280" "ratio280" $tube "" $vr "form-control" "" "3")</td>
                        <td>#xdatNumberBoxParamsID("irc5:salivaData/tubes/tube[$tubeidx]/concentration" "concentration" $tube "" $vr "form-control" "" "3")</td>
                        <td>#xdatBooleanCheckboxParams("irc5:salivaData/tubes/tube[$tubeidx]/recheck" "recheck" $tube $vr "form-control")</td>
                        <td><!-- Delete row-->


                        </td>
                    </tr>

                    #end
                #else
                <input type="hidden" name="EDIT" id="EDIT" value="false"/>
                        #foreach($tubeidx in [0..$maxtubes])
                        <tr>
                            <td>#xdatNumberBoxParamsRequired("irc5:salivaData/tubes/tube[$tubeidx]/tube_number" $item "" $vr "form-control" "" "3")</td>
                            <td>#xdatDateBoxParams("irc5:salivaData/tubes/tube[$tubeidx]/date_analysed" "" $item $vr $years "form-control")</td>
                            <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[$tubeidx]/ratio230" $item "" $vr "form-control" "" "3")</td>
                            <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[$tubeidx]/ratio280" $item "" $vr "form-control" "" "3")</td>
                            <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[$tubeidx]/concentration" $item "" $vr "form-control" "" "3")</td>
                            <td>#xdatBooleanCheckboxParams("irc5:salivaData/tubes/tube[$tubeidx]/recheck" "0" $item $vr "form-control")</td>
                            <td><button class="btn btn-default remove_row" title="Remove tube" onclick="removeRow();"><span class="glyphicon glyphicon-remove"></span></button></td>
                        </tr>
                        #end

                #end
                </tbody>

            </table>
            <div class="form-group col-sm-4" align="right">
                <input type="hidden" name="TUBE_COUNTER" id="TUBE_COUNTER" value="$maxtubes"/>
                <a href="javascript:void(0)" id="add_tube" class="btn btn-info">Add another tube</a>

            </div>

    </div>
        <div class="form-group">
			#xdatEditProps($item $edit_screen)

            <input class="btn btn-primary" type="submit" onclick="validateForm();" name="eventSubmit_doInsert"
                   value="Submit"/>
            <input class="btn btn-default" type="cancel" value="Cancel" onclick="goBack();"/>
        </div>
    </form>
    <div id="empty_tube" style="display:none"><table>
    <tr>
        <td>#xdatNumberBoxParamsRequired("irc5:salivaData/tubes/tube[COUNTER]/tube_number" $item "" $vr "form-control" "" "3")</td>
        <td>#xdatDateBoxParams("irc5:salivaData/tubes/tube[COUNTER]/date_analysed" "" $item $vr $years "form-control")</td>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/ratio230" $item "" $vr "form-control" "" "3")</td>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/ratio280" $item "" $vr "form-control" "" "3")</td>
        <td>#xdatNumberBoxParams("irc5:salivaData/tubes/tube[COUNTER]/concentration" $item "" $vr "form-control" "" "3")</td>
        <td>#xdatBooleanCheckboxParams("irc5:salivaData/tubes/tube[COUNTER]/recheck" "0" $item $vr "form-control")</td>
        <td><button class="btn btn-default remove_row" title="Remove tube" onclick="removeRow();"><span class="glyphicon glyphicon-remove"></span></button></td>
    </tr> </table></div>
</div>

<script type="text/javascript">
    function validateForm() {
        var tube_counter = $('#TUBE_COUNTER').val();
        document.getElementById("form1").submit();
        return true;
    }

    function goBack() {
        window.history.back();
    }

    function validateTotal(myval){
        var tube_counter = $('#TUBE_COUNTER').val();
        if (tube_counter > 0 && (myval < tube_counter)){
            alert("Cannot decrease total unless delete tubes first");
        }
    }


    $('#totaltd').find("input").click(function(event){
        event.preventDefault();
        var myval = parseInt($(this).val());
        validateTotal(myval);
    });

    $('#add_tube').click(function() {
        var tube_counter = $('#TUBE_COUNTER').val();
        var new_tube = parseInt(tube_counter) + 1;
        var tubescollected = $('#TUBES_COLLECTED').val();
        var newrow = $('#empty_tube table tbody').html().replace(/COUNTER/g, new_tube);
        //alert(newrow);
        if (new_tube < tubescollected) {
            $('#tubes').append(newrow);
            $('#TUBE_COUNTER').val(new_tube);
        }else{
            alert("Maximum number of tubes reached");
        }
    });

    $('.remove_row').click(function(event) {
        event.preventDefault();
        //event.stopImmediatePropagation();
        //event.stopPropagation();
        var tube_counter = $('#TUBE_COUNTER').val();
        $(this).parents("tr").remove();
        $('#TUBE_COUNTER').val(parseInt(tube_counter) - 1);
    });

    function removeRow(){
        var tube_counter = $('#TUBE_COUNTER').val();
        $(this).parents("tr").remove();
        $('#TUBE_COUNTER').val(parseInt(tube_counter) - 1);
    }


</script>

